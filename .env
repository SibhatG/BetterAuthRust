# Server configuration
SERVER_ADDR=0.0.0.0
SERVER_PORT=5000
SECRET_KEY=better_auth_secret_key_for_development
ACCESS_TOKEN_EXPIRY=3600  # in seconds (1 hour)
REFRESH_TOKEN_EXPIRY=604800  # in seconds (7 days)

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60  # in seconds

# PostgreSQL configuration
# DATABASE_URL is inherited from Replit environment variables
DATABASE_POOL_SIZE=5

# Email configuration (development mode - won't actually send emails)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=no-reply@example.com

# Logging configuration
RUST_LOG=debug